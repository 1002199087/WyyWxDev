<view class="rootView">
  <view class="cellGroupTitle">基础用法</view>
  <van-cell-group>
    <van-cell title="单元格" value="内容"></van-cell>
    <van-cell title="单元格" value="内容" label="描述信息"></van-cell>
  </van-cell-group>

  <view class="cellGroupTitle">单元格大小</view>
  <van-cell title="单元格" value="内容" size="large"></van-cell>
  <van-cell title="单元格" value="内容" size="normal"></van-cell>

  <view class="cellGroupTitle">展示图标</view>
  <van-cell title="单元格" value="内容" icon="like-o"></van-cell>

  <view class="cellGroupTitle">展示箭头</view>
  <van-cell title="单元格" is-link></van-cell>
  <van-cell title="单元格" value="内容" is-link></van-cell>
  <van-cell title="单元格" value="内容" is-link arrow-direction="down"></van-cell>

  <van-cell-group title="分组1">
    <van-cell title="单元格" value="内容"></van-cell>
  </van-cell-group>
  <van-cell-group title="分组2">
    <van-cell title="单元格" value="内容"></van-cell>
  </van-cell-group>

  <view class="cellGroupTitle">使用插槽</view>
  <van-cell value="内容" is-link label="描述信息">
    <view slot="title" class="slotView">
      <view class="van-cell-text">单元格</view>
      <van-tag type="danger">标签</van-tag>
    </view>
  </van-cell>
  <van-cell title="单元格">
    <van-icon slot="right-icon" name="search"></van-icon>
  </van-cell>

  <view class="cellGroupTitle">居中垂直</view>
  <van-cell title="单元格" value="内容" label="描述信息" center></van-cell>
</view>