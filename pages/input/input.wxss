/* pages/input/input.wxss */

/*如果不添加这行，rootView 100%不生效*/

page {
  height: 100%;
}

.rootView {
  width: 100%;
  height: 100%;
  background-color: #eee9e9;
  display: flex;
  flex-direction: column;
}

.containerView {
  border: 1px solid #eee9e9;
  border-radius: 10px;
  background-color: white;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
}

.inputView {
  margin: 10px;
  border-bottom: 1px solid gray;
  font-size: 20px;
}

.contentView {
  margin-left: 10px;
  margin-top: 10px;
  margin-right: 10px;
  font-size: 20px;
}
